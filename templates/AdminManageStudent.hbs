<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet"
	href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

	<!-- My CSS -->
	<link rel="stylesheet" href="css/style.css">
	<link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"
/>
	<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

	<title>Admin-Innovatia</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar" class="hide">
		<a href="/AdminHomepage" class="brand">
			<i class='bx bxs-dashboard'></i>
			<span class="text">Innovatia</span>
		</a>
		
		<ul class="side-menu">
			<li class="active">
				<a href="/AdminHomepage" > <!-- matches contentMap['home'] -->

					<i class='bx bxs-home-alt-2'></i>
					<span class="text">Home</span>
				</a>
			</li>
			
			<li>
				<a href="/AdminLeaderboard" >
					<i class='bx bxs-bar-chart-alt-2'></i>
					<span class="text">Leaderboard</span>
				</a>
			</li>
			<li>
				<a href="/AdminManageStudent" >
					<i class='bx bx-user'></i>
					
					<span class="text">Manage Students</span>
				</a>
			</li>
			<li>
				<a href="/AdminManageFaculty" >
					<i class='bx bx-user-voice' ></i>
					<span class="text">Manage Faculty</span>
				</a>
			</li>
			<li>
				<a href="/AdminFaculty" >
					<i class='bx bx-user-plus'></i>
					<span class="text">New Faculty Requests</span>
				</a>
			</li>
			
			<li>
				<a href="/AdminProjectRequests" >
					<i class='bx bxs-folder-open' ></i>
					
					<span class="text">Project Requests</span>
				</a>
			</li>
			<li>
				<a href="/ALogout" class="/Logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="/notification" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			
				<!-- Assuming this is in your navbar -->
<nav>
    <div class="profile" id="profile">
        <img src="img/people.png" alt="Profile Picture" class="profile-img">
    </div>
    <div id="profileMenu" class="profile-menu">
        <ul>         
            <li><a href="/ALogout">Logout</a></li>
        </ul>
    </div>
</nav>

			









		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Manage Students</h1>
                    <ul class="breadcrumb">
						<li>
							<a href="#">Leaderboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
					
				</div> 
				
			</div>

			
			<div class="table-data">
				<div class="order">
					<div class="head">
                        <h3>Students</h3>
						
						
						
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					{{#if Message}}
        <p class="{{#if isError}}error-message{{else}}success-message{{/if}}">
            {{Message}}
        </p>
        {{/if}}
		
		{{#if students.length}}
					<table>
						<thead>
							<tr>

								<th>S.no</th>
								<th>User Name</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Email Id</th>
								<th>College Name</th>
								<th>HallTicket.no</th>
								<th>department</th>
								<th>yearofstudy</th>
								<th>phone</th>  
								<th>Delete</th> 
								</tr>
						</thead>
						<tbody>
							
							{{#each students}}
							<tr>
								<td>
									<span>{{increment @index}}</span>
								</td>
								<td class="std-profile">
									
									<p> <span><img src="{{this.profilePic}}"></span>{{this.username}}</p>
								</td>
								<td>{{this.firstname}}</td>
								<td>{{this.lastname}}</td>
								<td>{{this.email}}</td>
								<td>{{this.collegename}}</td>
								<td>{{this.hallticket}}</td>
								<td>{{this.department}}</td>
								<td>{{this.yearofstudy}}</td>
								<td>{{this.phone}}</td>   
								<td> 
								
								 <form action="/AdminStudentDelete" method="post">
								 <input type="hidden" name="username" value="{{this.username}}">
  								 <button type="submit" class="submit">
                                      <i class="ri-delete-bin-6-line"></i>
								</button>
								</form>	
								
								</td>
							</tr>
							   {{/each}}
						</tbody>
					</table> 
					{{else}}
        				<p>No user data found.</p>
    				{{/if}}
				</div>
				
			</div>

			
		</main>
		<!-- MAIN -->
	</section>
	

	<script src="js/script.js"></script>
</body>
</html>